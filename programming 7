#include <iostream>
using namespace std;

class Student {
    public:
        string name;
        int rollNumber;
        string PRN;

        void enterDetails() {
            cout << "Enter student name: ";
            getline(cin, name);
            cout << "Enter roll number: ";
            cin >> rollNumber;
            cin.ignore(); 
            cout << "Enter PRN: ";
            getline(cin, PRN);
        }

        void displayDetails() {
            cout << "Student Details:" << endl;
            cout << "Name: " << name << endl;
            cout << "Roll Number: " << rollNumber << endl;
            cout << "PRN: " << PRN << endl;
        }
};

int main() {
    int n;
    cout << "Enter number of students: ";
    cin >> n;
    cin.ignore(); 

    Student students[n];

    for(int i = 0; i < n; i++) {
        cout << "Enter details of student " << (i+1) << ":" << endl;
        students[i].enterDetails();
    }

    cout <<"Displaying Student Details:" << endl;
    for(int i =0; i < n; i++) {
        cout <<" Student " <<(i+1) <<";";
        students[i].displayDetails();
    }
    
    return 0;
}
